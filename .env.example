APP_NAME="Service Public BF"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

# ── Base de données MySQL ─────────────────────────────
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=servicepublic_bf
DB_USERNAME=root
DB_PASSWORD=

# ── Sessions & Cache ──────────────────────────────────
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=file

# ── Stockage fichiers (documents PDF uploadés) ────────
FILESYSTEM_DISK=public

# ── Mail (optionnel pour l'envoi de formulaires) ──────
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@servicepublic.gov.bf"
MAIL_FROM_NAME="${APP_NAME}"
